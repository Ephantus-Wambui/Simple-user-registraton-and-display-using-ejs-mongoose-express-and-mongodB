<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

    <div class="container">

        <%- include('layouts/navbar'); -%>

        <h1>Users saved to mongoDB:</h1>

        <% usersList.forEach(user => { %>
            
            <div class="users">
            
                <h1>User id: <span><%=  user._id %>;</span></h1>

                <div class="fullname">
                    <div class="firstname"><span>Firstname:</span><%= user.firstname %></div>
                    <div class="lastname"><span>Lastname:</span><%= user.lastname %></div>
                </div>

                <div class="username"><span>Username:</span><%= user.username %></div>

                <div class="mail"><span>Email:</span><%= user.email %></div>

                <div class="dateofbirth"><span>DOB:</span><%= user.DOB %></div>

                <div class="tel"><span>Telephone number:</span><%= user.tel %></div>

            </div>
            
        <% }) %>

    </div>

    <%- include('layouts/footer'); -%>

    <%- include('layouts/scripts'); -%>
    
</body>

</html>
